<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.LogVisController" stylesheets="@style.css">
    <top>
        <VBox spacing="0">
            <HBox fx:id="navbar" alignment="CENTER_LEFT">
                <padding>
                    <Insets top="10" right="20" bottom="10" left="20"/>
                </padding>
                <ImageView fx:id="logo" fitHeight="30" fitWidth="30" preserveRatio="true">
                    <Image url="@logo.svg"/>
                </ImageView>
                <HBox fx:id="navItems" spacing="30" alignment="CENTER">
                    <padding>
                        <Insets left="40"/>
                    </padding>
                    <Label text="Home" styleClass="nav-item" />
                    <Label text="Logs" styleClass="nav-item" />
                    <Label text="Filters" styleClass="nav-item" />
                    <Label text="Alerts" styleClass="nav-item" />
                    <Label text="Settings" styleClass="nav-item" />
                </HBox>
                <Region HBox.hgrow="ALWAYS" />
                <HBox alignment="CENTER" spacing="15">
                    <TextField fx:id="searchField" promptText="Search..." styleClass="search-field" />
                    <ToggleButton fx:id="darkModeToggle" styleClass="dark-mode-toggle" />
                </HBox>
            </HBox>
            
            <VBox styleClass="content-area">
                <padding>
                    <Insets top="30" right="20" bottom="20" left="20"/>
                </padding>
                <HBox alignment="CENTER_LEFT" spacing="20">
                    <VBox spacing="5">
                        <Label text="Logs Details" styleClass="title-label"/>
                        <Label text="Here is a table that provides insights into logs details." styleClass="subtitle-label"/>
                    </VBox>
                    <Region HBox.hgrow="ALWAYS" />
                    <HBox alignment="CENTER" spacing="10" styleClass="date-filter">
                        <DatePicker fx:id="startDate" promptText="mm/dd/yyyy"/>
                        <Label text="to" styleClass="to-label"/>
                        <DatePicker fx:id="endDate" promptText="mm/dd/yyyy"/>
                        <Button text="Filter" styleClass="filter-button"/>
                    </HBox>
                </HBox>
            </VBox>
        </VBox>
    </top>
    
    <center>
        <TableView fx:id="logsTable" styleClass="logs-table">
            <columns>
                <TableColumn fx:id="columnIP" text="Client IP" prefWidth="150"/>
                <TableColumn fx:id="columnTimestamp" text="Timestamp" prefWidth="200"/>
                <TableColumn fx:id="columnRequestType" text="Request Type" prefWidth="150"/>
                <TableColumn fx:id="columnStatusCode" text="Status Code" prefWidth="150"/>
                <TableColumn fx:id="columnAction" text="Action" prefWidth="150"/>
                <TableColumn fx:id="columnLogLevel" text="Log Level" prefWidth="150"/>
            </columns>
            <padding>
                <Insets top="20" right="20" bottom="20" left="20"/>
            </padding>
        </TableView>
    </center>
</BorderPane>
